
@model List<HotCatCafe.BLL.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_ManagementPanelLayout.cshtml";
}

<h1>Product index</h1>

<a class="btn btn-primary" asp-action="Create" asp-controller="Product">Yeni Ürün Ekle</a>
<table class="table table-hover">
    <tr>
        <th>Image</th>
        <th>ID</th>
        <th>ProductName</th>
        <th>UnitPrice</th>
        <th>Stock</th>
        <th>Status</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.ImagePath != null)
                {
                    <img src="~/Images/ProductsImage/@item.ImagePath" width="72" height="72" />
                }
                else
                {
                    <img src="https://i.pinimg.com/originals/89/1c/95/891c953bb447aad198758abcb2598955.jpg" width="72" height="72" />
                }


            </td>
            <td>@item.ProductName</td>
            <td>@item.UnitPrice</td>
            <td>@item.UnitsInStock</td>

            <td>
                @switch (item.Status)
                {
                    case HotCatCafe.Model.Enums.DataStatus.Inserted:
                        <span>Silinmiş</span>
                        break;

                    case HotCatCafe.Model.Enums.DataStatus.Updated:
                        <span>Güncellenmiş</span>
                        break;

                    case HotCatCafe.Model.Enums.DataStatus.Deleted:
                        <span>Eklendi</span>
                        break;

                }
            </td>
            <td>
                <a asp-action="Update" asp-controller="Product" asp-route-id="@item.ProductId">Update</a>
                <a asp-action="Delete" asp-area="ManagementPanel" asp-controller="Product" asp-route-id="@item.ProductId">Delete</a>

            </td>
        </tr>
    }
</table>