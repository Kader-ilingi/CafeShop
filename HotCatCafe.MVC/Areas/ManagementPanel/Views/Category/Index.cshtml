@model List<HotCatCafe.BLL.ViewModels.CategoryViewModels.CategoryViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_ManagementPanelLayout.cshtml";
}

<h1>Category Index</h1>

<div class="mb-2">
    <table class="table table-hover text-nowrap">
        <thead>
            <tr>
                <th>#</th>
                <th>Category Name</th>
                <th>Description</th>
                <th>IsActive</th>
                <th>Status</th>
                <th></th>
                <th>
                    <a href="/ManagementPanel/Category/Create" class="btn btn-dark btn-md">Yeni Kategori</a>
                </th>
               
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>
                        @switch (item.Status)
                        {
                            case HotCatCafe.Model.Enums.DataStatus.Inserted:
                                <span>Eklenmiş</span>
                                break;
                            case HotCatCafe.Model.Enums.DataStatus.Updated:
                                <span>Güncellenmiş</span>
                                break;
                            case HotCatCafe.Model.Enums.DataStatus.Deleted:
                                <span>Silinmiş</span>
                                break;

                        }
                    </td>
                    <td>
                        @{
                            string result = item.IsActive ? "Aktif" : "Pasif";
                            <span> @result </span>
                        }
                    </td>
                    <td>
                        <a href="~/ManagementPanel/Category/Update/@item.ID" class="btn btn-success btn-sm">Update</a>
                        <a href="~/Administrator/Category/Destroy/@item.ID" class="btn btn-danger btn-sm">Destroy</a>
                        <a href="~/Administrator/Category/Details/@item.ID" class="btn btn-primary btn-sm">Details</a>
                    </td>
                </tr>

            }


        </tbody>
    </table>
</div>