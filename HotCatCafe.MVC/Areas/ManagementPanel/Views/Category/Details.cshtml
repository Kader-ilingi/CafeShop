@model List<HotCatCafe.BLL.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_ManagementPanelLayout.cshtml";
}

<h1>Details</h1>

<div class="mb-2">
    <table class="table table-hover text-nowrap">
        <thead>
            <tr>
                <th>Category Id</th>
                <th>ID</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>UnitsInStock</th>
                <th>Size</th>
                <th>IsActive</th>
                <th>Status</th>
                
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.UnitsInStock</td>
                    <td>@item.Size</td>
                    <td>@item.IsActive</td>
                    <td>
                        @switch (item.Status)
                        {
                            case HotCatCafe.Model.Enums.DataStatus.Inserted:
                                <span>Eklenmiş</span>
                                break;
                            case HotCatCafe.Model.Enums.DataStatus.Updated:
                                <span>Güncellenmiş</span>
                                break;
                            case HotCatCafe.Model.Enums.DataStatus.Deleted:
                                <span>Silinmiş</span>
                                break;

                        }
                    </td>
                    @* <td>
                        @{
                            string result = item.IsActive ? "Aktif" : "Pasif";
                            <span> @result </span>
                        }
                    </td> *@
                </tr>

            }

        </tbody>
    </table>
</div>